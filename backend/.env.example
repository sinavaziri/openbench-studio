# =============================================================================
# OpenBench Studio Configuration
# =============================================================================
# Copy this file to .env and configure your settings.
# Required variables are marked with [REQUIRED].
# All variables use the OPENBENCH_ prefix.
# =============================================================================

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
# Environment name: development, staging, production
# Default: development
OPENBENCH_ENV=development

# -----------------------------------------------------------------------------
# Authentication & Security [REQUIRED in production]
# -----------------------------------------------------------------------------
# Secret key for JWT token signing (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# [REQUIRED] Must be set in production - random key generated in development
OPENBENCH_SECRET_KEY=

# Encryption key for API key storage (exactly 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32)[:32])"
# [REQUIRED] Must be set in production - random key generated in development
OPENBENCH_ENCRYPTION_KEY=

# JWT algorithm (default: HS256)
# OPENBENCH_ALGORITHM=HS256

# Access token expiration in minutes (default: 10080 = 7 days)
# OPENBENCH_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------
# Server host (default: 0.0.0.0)
# OPENBENCH_HOST=0.0.0.0

# Server port (default: 8000)
# OPENBENCH_PORT=8000

# Enable debug mode (default: false)
# WARNING: Never enable in production!
# OPENBENCH_DEBUG=false

# Log level: debug, info, warning, error, critical (default: info)
# OPENBENCH_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
# API route prefix (default: /api)
# OPENBENCH_API_PREFIX=/api

# CORS allowed origins (comma-separated)
# Default includes localhost development servers
# OPENBENCH_API_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Path to SQLite database file
# Default: {DATA_DIR}/openbench.db
# OPENBENCH_DB_PATH=

# Enable SQL query logging (default: false)
# OPENBENCH_DB_ECHO=false

# Connection pool size (default: 5)
# OPENBENCH_DB_POOL_SIZE=5

# -----------------------------------------------------------------------------
# Provider API Keys (managed via UI, but can be set here for testing)
# -----------------------------------------------------------------------------
# These are used by the benchmark runner when executing benchmarks.
# Typically you configure these through the web UI, but you can set them
# here for automated deployments or testing.
#
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_API_KEY=...
# MISTRAL_API_KEY=...
# TOGETHER_API_KEY=...
# GROQ_API_KEY=gsk_...
# COHERE_API_KEY=...
# DEEPSEEK_API_KEY=...
# FIREWORKS_API_KEY=...
# PERPLEXITY_API_KEY=...
# VERTEX_PROJECT=
# VERTEX_LOCATION=
# AZURE_OPENAI_API_KEY=
# AZURE_OPENAI_ENDPOINT=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------
# 1. In Docker, the data directory is /app/data (mounted as a volume)
# 2. Locally, the data directory is PROJECT_ROOT/data
# 3. Run artifacts are stored in {DATA_DIR}/runs/{run_id}/
# 4. The database stores user accounts, run metadata, and encrypted API keys
